<resources>

    <!-- Base application theme. -->
    <!-- Day/Light  theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundColor">#ffff</item>
        <item name="cardBackground">#ffffff</item>
        <item name="textColor">@color/primaryColor</item>
        <item name="backgroundTintForFab">@color/primaryColor</item>
        <item name="backgroundTintForFabPresent">#007c00</item>
        <item name="backgroundTintForFabAbsent">#b71c1c</item>
        <item name="tintColor">#1976d2</item>
        <item name="backgroundForHeader">#1976d2</item>
        <item name="buttonColor">#004ba0</item>
        <item name="windowNoTitle">true</item>
        <item name="navigationItemTintColor">#C8202020</item>
        <item name="backgroundTint">#ffff</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#090909</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="windowActionBar">false</item>
        <item name="backgroundTint">#303030</item>
        <item name="backgroundForHeader">#303030</item>
        <item name="backgroundTintForFabPresent">#303030</item>
        <item name="backgroundTintForFab">#303030</item>
        <item name="backgroundTintForFabAbsent">#303030</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackground">#424242</item>
        <item name="textColor">@color/primaryLightColor</item>
        <item name="tintColor">#1976d2</item>
        <item name="buttonColor">#004ba0</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="navigationItemTintColor">#FFC107</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

</resources>
